<td>{{contact.id}}</td>
<td>
  {{#if isEditing}}
    {{view App.EditContactView contactBinding="contact" showViewBinding="this"}}
  {{else}}
    {{contact.fullName}}
  {{/if}}
</td>
<td>
  {{#unless isEditing}}
    {{#view editLink}}
      {{link "Edit"}}
    {{/view}}
    {{#view destroyLink}}
      {{link "Destroy"}}
    {{/view}}
  {{/unless}}
</td>
